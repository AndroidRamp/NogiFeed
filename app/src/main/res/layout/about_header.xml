<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/primary"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <TextView
        android:textSize="18sp"
        android:id="@+id/about_text"
        android:paddingBottom="24dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@android:color/white"
        android:text="@string/about_header_app_summary"
        android:gravity="center_vertical"
        />
    <LinearLayout
        android:layout_below="@id/about_text"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:orientation="horizontal"
        >
        <ImageView
            android:id="@+id/developer_icon"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:src="@drawable/kensyusei"
            android:layout_gravity="center"
            />
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="72dp">
            <TextView
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:paddingLeft="16dp"
                android:text="@string/about_header_developer_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:textColor="@android:color/white"
                android:textSize="18sp"
                android:paddingLeft="16dp"
                android:text="@string/about_header_developer_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
