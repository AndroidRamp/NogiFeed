<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/nogifeed_color"
        android:paddingRight="16dp"
        android:paddingLeft="16dp"
        android:paddingBottom="16dp"
        >
        <TextView
            android:textSize="18sp"
            android:id="@+id/about_text"
            android:paddingBottom="24dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/white"
            android:text="乃木坂46の公式ブログを読むアプリです。アプリに関しての質問や機能リクエストは @nogifeed までお問い合わせください。"
            />
        <LinearLayout
            android:layout_below="@id/about_text"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:orientation="horizontal"
            >
            <ImageView
                android:id="@+id/developer_icon"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:src="@drawable/kensyusei"
                android:layout_gravity="center"
                />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="72dp">
                <TextView
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:paddingLeft="16dp"
                    android:text="アプリ開発者"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <TextView
                    android:textColor="@android:color/white"
                    android:textSize="18sp"
                    android:paddingLeft="16dp"
                    android:text="shts"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <ListView
        android:id="@+id/about_list"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>